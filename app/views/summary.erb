<summary>
  <h1>Summary</h1>
  <form action="/creator" method="post" name="creator">
    <div class="row summary_header_field">
      <div class="large-3 column">
        <img class="summary_img" src="/images/metal_roof.jpg" class="material_img">
      </div>
      <div class="summary-form large-4 column end">
        <input class="summary_form_input" type="text" value="Title" name="title">
        <input class="summary_form_input" type="text" value="Disc_by" name="disc_by">
      </div>
    </div>
    <table class="summary-table">
      <thead class="summary-table">
        <tr>
          <th width="200">Attribute</th>
          <th>Result</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Material</td>
          <td><%= @roof.material %></td>
        </tr>
        <tr>
          <td>Shade Value</td>
          <td><%= @roof.shade_value %></td>
        </tr>
        <tr>
          <td>Roof Angle</td>
          <td><%= @roof.roof_angle %></td>
        </tr>
      </tbody>
    </table>
    <input type="submit" class="button round button_background" value="Save"/>
  </form>
</summary>

