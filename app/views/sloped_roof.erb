<form action="/sloped_roof_angle" method="post">
  <button class="button round button_background" type="submit" id="capture">Capture</button>
</form>

<script> 
  $(document).ready(function() {
    
    init();

    var x = document.getElementById("orient");

    navigator.geolocation.getCurrentPosition(showPosition);

    function showPosition(position) {
      x.innerHTML = "Latitude: " + position.coords.latitude + 
      "<br>Longitude: " + position.coords.longitude; 
    }

  });
</script>

<div class="info_icon">
  <a href="#" data-reveal-id="roof_angle_info" id="shade_button"><img class="info-icon" src="images/info_sign.png"></a>
</div>

<div id="roof_angle_info" class="reveal-modal info-popup" data-reveal>
